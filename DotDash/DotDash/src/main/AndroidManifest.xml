            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.groupa.dotdash.dotdash.PocketModeWriterActivity"
            android:label="@string/title_activity_pocket_mode_writer" >
        </activity>
    </application>

</manifest>
